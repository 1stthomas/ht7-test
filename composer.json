{
    "name": "ht7/ht7-test",
    "type": "library",
    "description": "A PHP library with classes to simplify tests with PHPUnit",
    "keywords": ["php", "ht7", "test", "php-unit"],
    "homepage": "https://github.com/1stthomas/ht7-test",
    "license": "GNU General Public License v3.0",
    "authors": [
        {
            "name": "1stthomas",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ht7\\Test\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ht7\\Test\\Tests\\": "tests/Unit"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpstan-phpunit": "^1.4",
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "phpstan": "./vendor/bin/phpstan analyse src tests --level max",
        "phpstan-win": ".\\vendor\\bin\\phpstan analyse src tests --level max",
        "test": "./vendor/bin/phpunit --configuration ./tests/phpunit.xml --testdox",
        "test-unit": "./vendor/bin/phpunit --configuration ./tests/phpunit.xml --testdox --testsuite Unit",
        "test-unit-win": ".\\vendor\\bin\\phpunit --configuration .\\tests\\phpunit.xml --testdox --testsuite Unit",
        "test-win": ".\\vendor\\bin\\phpunit --configuration .\\tests\\phpunit.xml --testdox"
    },
    "support": {
        "source": "https://github.com/1stthomas/ht7-test"
    }
}
